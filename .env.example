# EEMB Website Environment Variables Template
# Copy this file to .env.development, .env.staging, or .env.production
# and fill in the appropriate values

# ===================================
# APPLICATION
# ===================================
NODE_ENV=development
APP_NAME="EEMB Website"
APP_URL=http://localhost:3000
API_URL=http://localhost:1337

# ===================================
# DATABASE (PostgreSQL/Supabase)
# ===================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=eemb_dev
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_password_here
DATABASE_SSL=false
DATABASE_URL=postgresql://${DATABASE_USERNAME}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# Supabase (Production)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here

# ===================================
# STRAPI CMS
# ===================================
HOST=0.0.0.0
PORT=1337
APP_KEYS=your_app_keys_here
API_TOKEN_SALT=your_api_token_salt
ADMIN_JWT_SECRET=your_admin_jwt_secret
JWT_SECRET=your_jwt_secret
TRANSFER_TOKEN_SALT=your_transfer_token_salt

# ===================================
# CLOUDINARY (Media Storage)
# ===================================
CLOUDINARY_NAME=your_cloud_name
CLOUDINARY_KEY=your_api_key
CLOUDINARY_SECRET=your_api_secret
CLOUDINARY_URL=cloudinary://${CLOUDINARY_KEY}:${CLOUDINARY_SECRET}@${CLOUDINARY_NAME}

# ===================================
# NEXT.JS FRONTEND
# ===================================
NEXT_PUBLIC_API_URL=http://localhost:1337
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=${CLOUDINARY_NAME}
NEXT_PUBLIC_GA_TRACKING_ID=
NEXT_TELEMETRY_DISABLED=1

# ===================================
# EMAIL SERVICE (Optional)
# ===================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@ucsb.edu
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@eemb.ucsb.edu
EMAIL_REPLY_TO=info@eemb.ucsb.edu

# ===================================
# AUTHENTICATION
# ===================================
# UC SSO Integration (if available)
SSO_CLIENT_ID=
SSO_CLIENT_SECRET=
SSO_CALLBACK_URL=http://localhost:1337/connect/sso/callback

# ===================================
# MONITORING & ANALYTICS
# ===================================
# Sentry Error Tracking
SENTRY_DSN=
SENTRY_AUTH_TOKEN=
SENTRY_ORG=
SENTRY_PROJECT=

# Vercel Analytics (Production)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# ===================================
# REDIS CACHE (Optional)
# ===================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ===================================
# SEARCH (Algolia - Optional)
# ===================================
ALGOLIA_APP_ID=
ALGOLIA_API_KEY=
ALGOLIA_INDEX_NAME=eemb_content

# ===================================
# DEPLOYMENT
# ===================================
# Vercel
VERCEL_TOKEN=
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# Railway
RAILWAY_TOKEN=
RAILWAY_PROJECT_ID=

# GitHub
GITHUB_TOKEN=
GITHUB_REPOSITORY=your-org/eemb-website

# ===================================
# FEATURE FLAGS
# ===================================
ENABLE_ANALYTICS=false
ENABLE_NEWSLETTER=false
ENABLE_COMMENTS=false
ENABLE_SEARCH=false
ENABLE_CACHE=false

# ===================================
# SECURITY
# ===================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000,http://localhost:1337
SECURE_COOKIES=false
SESSION_SECRET=your_session_secret_here

# ===================================
# DEVELOPMENT TOOLS
# ===================================
DEBUG=false
LOG_LEVEL=info
ENABLE_PLAYGROUND=false
ENABLE_DOCUMENTATION=true