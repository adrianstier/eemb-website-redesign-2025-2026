# EEMB Website - Development Environment
# Local development settings

NODE_ENV=development
APP_NAME="EEMB Website (Dev)"
APP_URL=http://localhost:3000
API_URL=http://localhost:1337

# Database - Local PostgreSQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=eemb_dev
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=postgres
DATABASE_SSL=false
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/eemb_dev

# Strapi CMS
HOST=0.0.0.0
PORT=1337
APP_KEYS=toBeModified1,toBeModified2
API_TOKEN_SALT=toBeModified
ADMIN_JWT_SECRET=toBeModified
JWT_SECRET=toBeModified
TRANSFER_TOKEN_SALT=toBeModified

# Cloudinary (Dev Account)
CLOUDINARY_NAME=eemb-dev
CLOUDINARY_KEY=your_dev_key
CLOUDINARY_SECRET=your_dev_secret

# Next.js Frontend
NEXT_PUBLIC_API_URL=http://localhost:1337
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_TELEMETRY_DISABLED=1

# Email (Mailhog for local testing)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USERNAME=
SMTP_PASSWORD=
EMAIL_FROM=dev@eemb.local
EMAIL_REPLY_TO=info@eemb.local

# Redis Cache (Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Feature Flags (Development)
ENABLE_ANALYTICS=false
ENABLE_NEWSLETTER=true
ENABLE_COMMENTS=true
ENABLE_SEARCH=true
ENABLE_CACHE=false

# Security (Relaxed for development)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
CORS_ORIGIN=*
SECURE_COOKIES=false
SESSION_SECRET=dev-secret-change-in-production

# Development Tools
DEBUG=true
LOG_LEVEL=debug
ENABLE_PLAYGROUND=true
ENABLE_DOCUMENTATION=true