{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course",
    "description": "Academic courses"
  },
  "options": {
    "draftAndPublish": false,
    "timestamps": true
  },
  "attributes": {
    "courseCode": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 20
    },
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "description": {
      "type": "richtext",
      "maxLength": 5000
    },
    "units": {
      "type": "integer",
      "min": 1,
      "max": 12
    },
    "level": {
      "type": "enumeration",
      "enum": ["Undergraduate", "Graduate", "Both"],
      "required": true
    },
    "instructor": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::faculty.faculty",
      "inversedBy": "courses"
    },
    "coinstructors": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::faculty.faculty"
    },
    "quarter": {
      "type": "enumeration",
      "enum": ["Fall", "Winter", "Spring", "Summer"]
    },
    "year": {
      "type": "integer",
      "min": 2020,
      "max": 2030
    },
    "schedule": {
      "type": "string",
      "maxLength": 100
    },
    "location": {
      "type": "string",
      "maxLength": 100
    },
    "prerequisites": {
      "type": "text",
      "maxLength": 500
    },
    "syllabus": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["files"]
    },
    "enrollmentCap": {
      "type": "integer",
      "min": 0
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "slug": {
      "type": "uid",
      "targetField": "courseCode"
    }
  }
}