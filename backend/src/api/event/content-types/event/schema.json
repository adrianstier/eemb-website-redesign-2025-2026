{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Department events, seminars, and activities"
  },
  "options": {
    "draftAndPublish": true,
    "timestamps": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 200
    },
    "eventType": {
      "type": "enumeration",
      "enum": [
        "Seminar",
        "Workshop",
        "Conference",
        "Lecture",
        "Social",
        "Recruitment",
        "Defense",
        "Meeting",
        "Alumni Event",
        "Field Trip",
        "Other"
      ],
      "required": true
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime"
    },
    "allDay": {
      "type": "boolean",
      "default": false
    },
    "location": {
      "type": "string",
      "maxLength": 200
    },
    "virtualLink": {
      "type": "string",
      "regex": "^https?://.*"
    },
    "description": {
      "type": "richtext",
      "maxLength": 5000
    },
    "shortDescription": {
      "type": "text",
      "maxLength": 500
    },
    "speaker": {
      "type": "string",
      "maxLength": 200
    },
    "speakerTitle": {
      "type": "string",
      "maxLength": 200
    },
    "speakerAffiliation": {
      "type": "string",
      "maxLength": 200
    },
    "speakerBio": {
      "type": "text",
      "maxLength": 1000
    },
    "speakerImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "eventImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "registrationRequired": {
      "type": "boolean",
      "default": false
    },
    "registrationLink": {
      "type": "string",
      "regex": "^https?://.*"
    },
    "registrationDeadline": {
      "type": "datetime"
    },
    "maxAttendees": {
      "type": "integer",
      "min": 0
    },
    "hostFaculty": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::faculty.faculty"
    },
    "tags": {
      "type": "json",
      "description": "Event tags"
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "recurring": {
      "type": "boolean",
      "default": false
    },
    "recurringPattern": {
      "type": "string"
    },
    "canceled": {
      "type": "boolean",
      "default": false
    },
    "cancelationReason": {
      "type": "text"
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["files", "images"]
    }
  }
}